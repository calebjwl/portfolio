<div class="section">
  <div class="container">
    <h1 class="title centered">My Work</h1>
    <div class="grid">
      {{#each items as |item|}}
        <div class="grid__item hvr-grow">
          <div class="card">
            <a href="{{item.link}}" target="_blank" class="thumbnail">
              <img class="card__image" src={{item.src}}/>
              <img class="card__gif" src={{item.gif}}/>
            </a>
            <h1 class="card__title">{{item.title}}</h1>
            <p class="card__description">{{item.description}}</p>
            <div class="card__info">
              <p class="card__tools">{{item.tools}}</p>
              <div class="card__info-bottom">
                <a href="{{item.link}}">Live Site |</a>
                <a class="card__link" href="{{item.github}}">Code</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
